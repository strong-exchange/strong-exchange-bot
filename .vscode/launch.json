    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/strong_exchange_bot/manage.py"
        },
        {
            "name": "Docker: Launch Django",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}/strong_exchange_bot/",
                        "remoteRoot": "/app/"
                    }
                ],
                "projectType": "django",
                // "justMyCode": false,
            },
        }
    ]
}